{
  "manifest_version": 2,

  "name": "bilibili新番组",
  "description": "自动检查Bilibili新番",
  "version": "1.0",

  "permissions": [
    "storage",
    "notifications",
    "*://*.bilibili.tv/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "options_page": "options.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [
    "icon.png"
  ],
  "background": {
    "persistent": false,
    "page": "background.html"
  }
}
